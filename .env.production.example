# Environment Variables for Production
# Copy to .env and fill in your values

# Database Configuration
# Connection pool size for high concurrency (300+ req/sec)
# Format: postgresql://user:password@host:port/database?connection_limit=60&pool_timeout=10
DATABASE_URL="postgresql://trustgambit:changeme123@localhost:5432/trustgambit?connection_limit=60&pool_timeout=10&connect_timeout=10"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
AUTH_TRUST_HOST="true"

# Redis Configuration (Required for rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# Node Environment
NODE_ENV="production"

# PostgreSQL Password
POSTGRES_PASSWORD="changeme123"

# Performance Tuning (Optional)
# Maximum number of concurrent API requests per user
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# Cache TTL (seconds)
CACHE_TTL_GAME_STATE="30"
CACHE_TTL_USER_PROFILE="300"
CACHE_TTL_ROUND="10"
